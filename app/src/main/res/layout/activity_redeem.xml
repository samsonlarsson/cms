<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context="ke.co.greencredit.nunua.Redeem">

    <include
        android:id="@+id/app_bar"
        layout="@layout/basic_app_bar" />

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="4dip"
        android:layout_below="@id/app_bar"
        android:background="@drawable/gradient" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ke.co.greencredit.nunua.Fonts.RobotoRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="SUCCESS!"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ke.co.greencredit.nunua.Fonts.RobotoRegular
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Your request to redeem your loyalty points has been successful. Visit our offices in Utawala to be guided on further steps."
                android:textColor="@color/text_grey"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/insta_green"
            android:text="DONE"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>
