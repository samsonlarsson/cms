<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    tools:context="ke.co.greencredit.nunua.Registration">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include
        android:id="@+id/app_bar"
        layout="@layout/basic_app_bar2" />

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="4dip"
        android:layout_below="@id/app_bar"
        android:background="@drawable/gradient" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/app_bar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/cardUser"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <ke.co.greencredit.nunua.Fonts.RobotoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Name"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"/>
            <ke.co.greencredit.nunua.Fonts.RobotoLightEdit
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Username"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rectangle_border"/>

            <ke.co.greencredit.nunua.Fonts.RobotoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Location"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"/>
            <ke.co.greencredit.nunua.Fonts.RobotoLightEdit
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="User location"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/rectangle_border"/>
            <Button
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@color/insta_green"
                android:id="@+id/btnUpdate"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/cardApp"
        android:layout_below="@id/cardUser"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Clear Cache"
            android:textSize="20sp"
            android:textColor="@android:color/white"

            android:layout_marginBottom="10dp"
            android:background="@color/insta_green"
            android:id="@+id/btn"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center" />
    </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/cardApp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/red"
        android:id="@+id/btn2"
        android:layout_marginLeft="44dp"
        android:layout_gravity="center" />
</RelativeLayout>
</ScrollView>
